<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@android:color/transparent" >
  
   <ImageView 
	android:contentDescription="@string/bkgd_img"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:src="@drawable/liitem"
	android:scaleType="fitXY" />
    
   <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     
	<TextView
	    android:id="@+id/acnt_li_tv"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="40dp"
	    android:layout_marginRight="40dp"
	    android:textColor="@color/txt_col"
	    android:drawableRight="@drawable/ic_launcher"
	    android:text="abc"
	    android:textSize="24sp" />
	
	<TextView
	    android:id="@+id/acnt_li_tv1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/acnt_li_tv"
	    android:layout_marginLeft="20dp"
	    android:text="efg"
	    android:textColor="@color/grn_txt"
	    android:textSize="16sp" />

	 <ProgressBar
	     android:id="@+id/acnt_li_pb"
	     style="?android:attr/progressBarStyleHorizontal"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	     android:layout_centerHorizontal="true"
	     android:layout_alignLeft="@+id/acnt_li_tv"
	     android:layout_alignRight="@+id/acnt_li_tv"
	     android:layout_marginBottom="15dp"
	     android:progress="50" />

	 <TextView
	     android:id="@+id/acnt_li_tv2"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignBaseline="@+id/acnt_li_tv1"
	     android:layout_alignBottom="@+id/acnt_li_tv1"
	     android:layout_alignRight="@+id/acnt_li_tv"
	     android:layout_toRightOf="@+id/acnt_li_tv1"
	     android:paddingLeft="20dp"
	     android:text="hij"
	     android:textColor="@color/fade_col"
	     android:textSize="16sp" />

	 <TextView
	     android:id="@+id/acnt_li_tv3"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/acnt_li_tv"
	     android:layout_alignRight="@+id/acnt_li_tv2"
	     android:layout_below="@+id/acnt_li_tv1"
	     android:text="lmn"
	     android:textColor="@color/grn_txt"
	     android:textSize="12sp" />

	 <TextView
	     android:id="@+id/acnt_pb_tv"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_above="@+id/acnt_li_pb"
	     android:layout_alignLeft="@+id/acnt_alert_tv"
	     android:layout_alignRight="@+id/acnt_li_pb"
	     android:text="@string/dst_thres"
	     android:textColor="@color/fade_col" />

	 <TextView
	     android:id="@+id/acnt_alert_tv"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/acnt_li_tv1"
	     android:layout_alignRight="@+id/acnt_li_tv3"
	     android:layout_below="@+id/acnt_li_tv3"
	     android:text="@string/alrt_set"
	     android:textColor="@color/txt_col"
	    android:textSize="16sp" />

	 <TextView
	     android:id="@+id/acnt_email_tv"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/acnt_li_tv3"
	     android:layout_alignRight="@+id/acnt_alert_tv"
	     android:layout_below="@+id/acnt_alert_tv"
	     android:text="foo@foo.com"
	     android:textColor="@color/grn_txt"
	     android:textSize="12sp" />
	 
	 <TextView
	     android:id="@+id/acnt_phone_tv"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/acnt_email_tv"
	     android:layout_alignRight="@+id/acnt_alert_tv"
	     android:layout_below="@+id/acnt_email_tv"
	     android:text="555-555-5555"
	     android:textColor="@color/grn_txt"
	     android:textSize="12sp" />

	 </RelativeLayout>
</FrameLayout>
